<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.solvd.argwinterlab.navigator.db.dao.IPath">
    <sql id="getPathTemplate">
        <![CDATA[
            SELECT  P.ID AS PATH_ID,
                    P.DESTINY_ID AS PATH_DESTINY_STATION_ID,
                    TS.ID AS TRANSPORT_ID,
                    TS.MODEL AS TRANSPORT_MODEL,
                    TS.WEIGHT AS TRANSPORT_WEIGHT,
                    TS.NAME AS TRANSPORT_NAME,
                    TS.TRANSPORT_TYPE AS TRANSPORT_TYPE
            FROM
                dbName.PATHS P
            LEFT JOIN
                dbName.TRANSPORTS TS
                    ON P.ID = TS.PATH_ID
        ]]>
    </sql>

    <select id="findById" resultMap="PathMap">
        <include refid="getPathTemplate"/>
        <![CDATA[
            WHERE TE.ID = #{id}
        ]]>
    </select>

    <select id="findAll" resultMap="PathMap">
        <include refid="getPathTemplate"/>
    </select>

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        <![CDATA[INSERT INTO dbName.PATHS (DESTINY_ID)
                 VALUES (
                     #{destinyId}
                 );
        ]]>
    </insert>

    <update id="updateById">
        <![CDATA[UPDATE
                    dbName.TRANSPORTS
        ]]>
        <set>
            <if test="weight != null">
                <![CDATA[ WEIGHT = #{weight}, ]]>
            </if>
            <if test="model != null">
                <![CDATA[ MODEL = #{model}, ]]>
            </if>
            <if test="name != null">
                <![CDATA[ NAME = #{name} ]]>
            </if>
        </set>
        <![CDATA[
            WHERE ID = #{id}
        ]]>
    </update>

    <delete id="delete">
        <![CDATA[
            DELETE FROM dbName.TRANSPORTS
            WHERE ID = #{id}
        ]]>
    </delete>

    <resultMap id="PathMap" autoMapping="false" type="Path">
        <id property="id" column="PATH_ID"/>
        <association property="destiny" resultMap="com.solvd.argwinterlab.navigator.db.dao.IStation.SimpleStationMap"/>
        <discriminator javaType="int" column="TRANSPORT_TYPE">
            <case value="1">
                <collection property="transportEntities"
                            ofType="Taxi"
                            resultMap="com.solvd.argwinterlab.navigator.db.dao.ITaxi.TaxiMap"/>
            </case>
            <case value="2">
                <collection property="transportEntities"
                            ofType="Train"
                            resultMap="com.solvd.argwinterlab.navigator.db.dao.ITrain.TrainMap"/>
            </case>
            <case value="3">
                <collection property="transportEntities"
                            ofType="Bus"
                            resultMap="com.solvd.argwinterlab.navigator.db.dao.IBus.BusMap"/>
            </case>
        </discriminator>
    </resultMap>
</mapper>