<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.solvd.argwinterlab.navigator.db.dao.PathMapper">
    <sql id="getPathTemplate">
        <![CDATA[
            SELECT
                P.ID AS PATH_ID,
                P.DESTINY_ID AS PATH_DESTINY_STATION_ID
            FROM
                nav_db.PATHS P
        ]]>
    </sql>

    <select id="findById" resultMap="PathMap">
        <include refid="getPathTemplate"/>
        <![CDATA[
            WHERE P.ID = #{id}
        ]]>
    </select>

    <select id="findAll" resultMap="PathMap">
        <include refid="getPathTemplate"/>
    </select>

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        <![CDATA[INSERT INTO nav_db.PATHS (DESTINY_ID)
                 VALUES (
                     #{destinyId}
                 );
        ]]>
    </insert>

    <update id="updateById">
        <![CDATA[UPDATE
                    nav_db.TRANSPORTS
        ]]>
        <set>
            <if test="weight != null">
                <![CDATA[ WEIGHT = #{weight}, ]]>
            </if>
            <if test="model != null">
                <![CDATA[ MODEL = #{model}, ]]>
            </if>
            <if test="name != null">
                <![CDATA[ NAME = #{name} ]]>
            </if>
        </set>
        <![CDATA[
            WHERE ID = #{id}
        ]]>
    </update>

    <delete id="delete">
        <![CDATA[
            DELETE FROM nav_db.TRANSPORTS
            WHERE ID = #{id}
        ]]>
    </delete>

    <resultMap id="PathMap" autoMapping="false" type="Path">
        <id property="id" column="PATH_ID"/>
    </resultMap>
</mapper>