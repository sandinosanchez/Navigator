<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.solvd.argwinterlab.navigator.db.dao.TaxiMapper">
    <sql id="getTaxiTemplate">
        <![CDATA[
            SELECT  TS.ID AS TAXI_ID,
                    TS.WEIGHT AS TAXI_WEIGHT,
                    TS.MODEL AS TAXI_MODEL,
                    TS.NAME AS TAXI_NAME,
                    T.COMPANY AS TAXI_WAGONS
            FROM
                nav_db.TRANSPORTS TS
            LEFT JOIN
                nav_db.TAXIS T
                    ON TS.ID = T.TRANSPORT_ID
        ]]>
    </sql>

    <select id="findById" resultMap="TaxiMap">
        <include refid="getTaxiTemplate"/>
        <![CDATA[
            WHERE TE.ID = #{id}
        ]]>
    </select>

    <select id="findAll" resultMap="TaxiMap">
        <include refid="getTaxiTemplate"/>
    </select>

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        <![CDATA[
            BEGIN;
                 INSERT INTO nav_db.TRANSPORTS (WEIGHT, MODEL, NAME)
                 VALUES (
                     #{name},
                     #{weight},
                     #{model}
                 );
                 INSERT INTO nav_db.TAXIS (ID, COMPANY)
                 VALUES (
                    LAST_INSERT_ID(),
                    #{company}
                 );
            COMMIT;
        ]]>
    </insert>

    <update id="updateById">
        <![CDATA[UPDATE
                    nav_db.TRANSPORT_ENTITY
        ]]>
        <set>
            <if test="weight != null">
                <![CDATA[ WEIGHT = #{weight}, ]]>
            </if>
            <if test="model != null">
                <![CDATA[ MODEL = #{model}, ]]>
            </if>
        </set>
        <![CDATA[
            WHERE ID = #{id}
        ]]>
    </update>

    <delete id="delete">
        <![CDATA[
            DELETE FROM nav_db.TRANSPORT_ENTITY
            WHERE ID = #{id}
        ]]>
    </delete>

    <resultMap id="TaxiMap" autoMapping="false" type="Taxi">
        <id property="id" column="TAXI_ID"/>
        <!--   <result property="model" column="TAXI_MODEL"/>
        <result property="weight" column="TAXI_WEIGHT"/>
        <result property="name" column="TAXI_NAME"/>
        <result property="company" column="TAXI_COMPANY"/>-->
    </resultMap>
</mapper>